<%- include("_header") -%>

<h1>Registrar un empleado</h1>

<form action="/create" method="post">
  <div class="form-horizontal">

    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="nombre">Nombre</label>
      <div class="col-sm-8">
        <input
          autofocus
          class="form-control"
          name="nombre"
          required
        />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="apellido">apellido</label>
      <div class="col-sm-7">
        <input
          type="text"
          class="form-control"
          name="apellido"
          required
        />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="correo">Correo</label>
      <div class="col-sm-7">
        <input
          type="email"
          class="form-control"
          name="correo"
          required
        />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="fechaIngreso"
        >Fecha de ingreso</label
      >
      <div class="col-sm-10">
        <input
          type="date"
          name="fechaIngreso"
          required
        />
      </div>
    </div>
    

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Guardar" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/">Cancelar</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>